{
  "name": "filaman-server",
  "version": "0.1.0",
  "description": "Backend for filaman app",
  "main": "build/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node --project ./tsconfig.json src/index.ts",
    "build": "rimraf build && cross-env NODE_ENV=production tsc",
    "typecheck": "tsc --noEmit",
    "lint": "esw --color --ext .ts src",
    "lint:fix": "esw --color --fix --ext .ts src",
    "lint:watch": "esw --color --fix --watch --cache --ext .ts src",
    "format": "prettier --save src",
    "release": "standard-version",
    "release:pre": "standard-version --prerelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gergof/filaman-server.git"
  },
  "keywords": [
    "filaman",
    "filament",
    "3d",
    "printing"
  ],
  "author": "Fándly Gergő <gergo@systemtest.tk>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/gergof/filaman-server/issues"
  },
  "homepage": "https://github.com/gergof/filaman-server#readme",
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^8.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "env-var": "^7.1.1",
    "fastify": "^3.25.3",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.3",
    "openid-client": "^5.1.1",
    "oso": "^0.25.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41",
    "winston": "^3.3.3",
    "yup": "^0.32.11"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "git fetch --all --tags"
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "imp",
        "section": "Improvements"
      },
      {
        "type": "ci",
        "section": "Build/CI"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "refactor",
        "section": "Refactor"
      },
      {
        "type": "test",
        "section": "Testing"
      },
      {
        "type": "perf",
        "section": "Performance"
      },
      {
        "type": "intern",
        "section": "Internal"
      }
    ]
  }
}
